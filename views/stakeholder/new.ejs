    <form action="/stakeholder/create" method="POST" id="new-stakeholder-form" class="form-new-stk">
    <h2 class="form-signin-heading">Create Stakeholder</h2>

    <% if (flash && flash.err) { %>
        <ul class="alert alert-success">
            <li>Existe flash</li>
            <% Object.keys(flash.err).forEach(function(error) {%>
            <li><%- JSON.stringify(flash.err[error]) %></li>
            <% }); %>
        </ul>

    <% } %>
    <
    <input type="hidden" name="belongs_to_project" value="<%=project.id%>" />
    
    <div class="control-group">
        <input type="text" class="form-control" placeholder="Name" name="name"></br>
    </div>
    
    <div class="control-group">
        <input type="text" class="form-control" placeholder="Communications plan" name="comm_plan"></br>
    </div>
