<div class="container">
    <h1><%= user.name %></h1> -<h3> <%= user.email %></h3>
   
    <hr>
    <H2>Proyectos</H2>
    <table class="table table-striped table-hover">
        <tr>
            
            <th>Name</th>
            <th>Description</th>
            <th>Scope</th>
            <th>Project Charter</th>
            <th>EDT</th>
            <th>Stakeholders</th>
            <th>Risks</th>
            <th>Gantt</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        
         
                <% _.each(user.projects, function(project) { %>
                    <tr data-id="<%= project.id%>" data-model="project">
                        <!-- <td><%=project.id%></td> -->
                        <td><%=project.name%></td>
                        <td><%=project.description%></td>
                        <td><%=project.scope%></td>
                        <%if (project.status) {%>
                            <td><% if (project.status.pcharter == "wip") {%>
                                <i class="fa fa-play" aria-hidden="true"></i>
                                <% } else {%>
                                <% if (project.status.pcharter == "finished") {%>
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                <% } else {%>
                                    <i class="fa fa-question" aria-hidden="true"></i>
                                    <% }}%>
                            </td>
                        <td><% if (project.status.edt == "wip") {%>
                            <i class="fa fa-play" aria-hidden="true"></i>
                            <% } else {%>
                            <% if (project.status.edt == "finished") {%>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <% } else {%>
                                <i class="fa fa-question" aria-hidden="true"></i>
                                <% }}%>
                        </td>
                        <td><% if (project.status.stakeholders == "wip") {%>
                            <i class="fa fa-play" aria-hidden="true"></i>
                            <%} else {%>
                            <% if (project.status.stakeholders == "finished") {%>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <%} else {%>
                                <i class="fa fa-question" aria-hidden="true"></i>
                                <%}}%>
                        </td>
                        <td><% if (project.status.risks == "wip") {%>
                            <i class="fa fa-play" aria-hidden="true"></i>
                            <%} else {%>
                            <% if (project.status.risks == "finished") {%>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <%} else {%>
                                <i class="fa fa-question" aria-hidden="true"></i>
                                <%}}%>
                        </td>
                        <td><% if (project.status.gantt == "wip") {%>
                            <i class="fa fa-play" aria-hidden="true"></i>
                            <%} else {%>
                            <% if (project.status.gantt == "finished") {%>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <%} else {%>
                                <i class="fa fa-question" aria-hidden="true"></i>
                                <%}}%>

                                <%}%>
                        </td>
                        <td>
                        <table class="table table-sm ">
                            <tr> 
                                <a href="/project/show/<%=project.id%>">Show</a>
                                <a href="/project/edit/<%=project.id%>">Edit</a>
                                <form action="/project/destroy/<%= project.id %>" method="POST">
                                    <input type="hidden" name="owner" value="<%= project.owner %>" >
                                    <input type="hidden" name="_method" value="delete" >
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash fa-2" aria-hidden="true"></i>
                                    </button>
                                    <input type="hidden" name="_csrf" value="<%= _csrf%>">
                                </form></td>
                            </tr>
                        </table>
                    </tr>
            <% }); %>
        
    </table>


    <form action="/project/new" method="POST">
    <input type="hidden" value="<%=user.id%>" name="owner">
    <button type="submit" class="btn btn-large btn-success">Add Project</button>
    <input type="hidden" value="<%=_csrf%>" name="_csrf">
    </form>
</div>