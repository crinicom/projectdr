<div id="wrapper">
    <form action="/user/update_team" method="POST" id="new-teammember-form" class="form-new-teammember">
    <h2 class="form-signin-heading"><%=__('add_to_team.title')%></h2>

    <% if (flash && flash.err) { %>
        <ul class="alert alert-success">
            <li>Existe flash</li>
            <% Object.keys(flash.err).forEach(function(error) {%>
            <li><%- JSON.stringify(flash.err[error]) %></li>
            <% }); %>
        </ul>

    <% } %>
    <input type="hidden" name="new_project" value="<%=project.id%>" />
    <div class="control-group">
    <input type="email" class="form-control" placeholder="email" name="email" autofocus></br>
    </div>
    
    
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="<%=__('add_to_team.button')%>">
    <input type="hidden" name="_csrf" value="<%=_csrf%>" />
    </form>
</div>
