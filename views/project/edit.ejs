<div id="wrapper">
    <form action="/project/update/<%=project.id%>" method="POST">
        <h2>Edit project: <%=project.name%></h2>

        <input type="hidden" name="owner" value="<%=project.owner%>" />
        <input cols="100" type="text" value="<%=project.name%>"  name="name"><br/>
        <textarea rows="6" cols="200" type="text" value="<%=project.description%>" name="description"><%=project.description%></textarea><br/>
        <textarea rows="6" cols="100" type="text" value="<%=project.scope%>" name="scope" /><%=project.scope%></textarea><br/>
        <input type="submit" value="Update" class="btn btn-lg btn-success" />
        <a href="/user/show/<%=project.owner %>" class="btn btn-lg btn-danger">Cancel</a>
        
        <input type="hidden" name="_csrf" value="<%=_csrf%>" />
        

    </form>
</div>
