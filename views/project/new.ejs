<div class="container">
<form action="/project/create" method="POST">
    <h2>New project for User <%=user.name%></h2>

    <input type="hidden" name="owner" value="<%=user.id%>" />
    <input type="text" placeholder="name" name="name"><br/>
  
    <textarea rows="6" cols="200" type="text" placeholder="project description" name="description"></textarea><br/>
    <textarea rows="6" cols="100" type="text" placeholder="project scope" name="scope" /></textarea><br/>
    <input type="submit" value="Add project" class="btn btn-success"/>
    <input type="hidden" value="<%=_csrf%>" name="_csrf">

</form>
</div>